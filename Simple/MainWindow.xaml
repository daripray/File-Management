<Window x:Class="Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple"
        mc:Ignorable="d"
        Title="MainWindow" Height="595" Width="1057">
    <StackPanel>
        <TabControl Height="236" RenderTransformOrigin="0.5,0.5">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Button" Margin="928,132,72,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="12.089,4.259" HorizontalAlignment="Left" Width="40"/>
                    <TextBox HorizontalAlignment="Left" Margin="156,32,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Label" Margin="22,14,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <DataGrid Height="307" d:ItemsSource="{d:SampleData ItemCount=15}"/>
    </StackPanel>
</Window>
